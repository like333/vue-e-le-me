body,html
  line-height: 1
  font-weight:200
  font-family: 'pingFang SC','STHeitiSC-Light','Helvetica-Light',arial,sans-serif
// 清除浮动
.clearfix
  display:inline-block
  zoom:1
  &:after
    content:''
    clear:both
    height:0
    line-height:0
    display: block
    visibility: hidden

//不同分辨率下处理边框高度
@media only screen and (-webkit-min-device-pixel-ratio:1.5) and (min-device-width:320px)
  .border-1px
    &:after
      -webkit-transform: scaleY(.7)
      transform: scaleY(.7)
@media only screen and (min-device-width: 375px)and (-webkit-min-device-pixel-ratio: 2)
  .border-1px
    &:after
      -webkit-transform: scaleY(.5)
      transform: scaleY(.5)
